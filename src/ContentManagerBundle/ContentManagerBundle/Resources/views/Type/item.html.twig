{% extends('::admin.html.twig') %}

{% block body %}

	<div class="row-fluid">
		<div class="span12">
			{% for flashMessage in app.session.flashbag.get('info') %}
			    <div class="alert alert-info">
			    	<button class="close" data-dismiss="alert" type="button">Ã—</button>
			        <strong>Notice</strong>
			        {{ flashMessage }}
			    </div>
			{% endfor %}
			<table class="table table-striped table-bordered table-hover">
	            <thead>
	                <tr>
	                  	<th>
	                  		<h1 class="well no-margin">
	                  			Type Manager
	                  		</h1>
	                  	</th>
	                </tr>
	            </thead>
		    </table>

		    <a href="{{ path('types') }}" class="btn btn-small pull-right"><i class="icon icon-chevron-left"></i> Retour</a>
		    <div class="clear h20"></div>

			{% if type.id != 0 %}
				<form class="form-horizontal" action="{{path('type_edit', {'id':type.id})}}" method="post" {{ form_enctype(form) }}>
			{% else %}
				<form class="form-horizontal" action="{{path('type_new')}}" method="post" {{ form_enctype(form) }}>
			{% endif %}
				<div class="well span8">
					{{ form_errors(form) }}

					<div class="control-group">
						<div class="control-label">
							{{ form_label(form.title) }}
						</div>
						<div class="controls">
							{{ form_widget(form.title) }}
							{{ form_errors(form.title) }}
						</div>
					</div>

					<div class="form-actions">
					    <button type="submit" class="btn btn-primary btn-small">Save changes</button>
					    <a href="{{ path('types') }}" class="btn btn-small">Cancel</a>
				    </div>
				</div>
				<div class="well span4">
					{{ form_rest(form) }}
				</div>

			</form>
		</div>
	</div>

{% endblock body %}

{% block javascripts %}
{% endblock javascripts %}
