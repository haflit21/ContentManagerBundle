    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="contentmanager.cutword.class">ContentManagerBundle\ContentManagerBundle\Twig\Extension\CutWordExtension</parameter>
    </parameters>

    <services>
        <service id="twig.extension.cutWord_extension" class="%contentmanager.cutword.class%">
